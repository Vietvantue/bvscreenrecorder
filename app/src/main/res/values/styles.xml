<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:tabWidgetStyle">@style/tab</item>
    </style>

    <style name="tab" parent="Base.Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:color">@color/color_green</item>

    </style>

    <style name="MyActionBarTabStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/color_black</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="textStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
